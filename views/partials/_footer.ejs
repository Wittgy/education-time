 <script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuLinks = document.querySelectorAll("#topnav > ul > li > a"); 

    menuLinks.forEach(link => {
        link.addEventListener("click", function (event) {
            // Sayfa yönlendirmesini engelle (Eğer SPA mantığıyla çalışıyorsan)
            event.preventDefault();

            // Önceki aktif öğeyi bul ve kaldır
            document.querySelector("#topnav li.active")?.classList.remove("active");

            // Tıklanan linkin ebeveyn <li> öğesine active sınıfını ekle
            this.parentElement.classList.add("active");

            // Yeni sayfaya git (Eğer yönlendirmeyi istiyorsan)
            window.location.href = this.href;
        });
    });

    // Sayfa yüklendiğinde aktif sayfa için active ekleyelim
    const currentPath = window.location.pathname;
    menuLinks.forEach(link => {
        if (link.getAttribute("href") === currentPath) {
            link.parentElement.classList.add("active");
        }
    });
});

 </script>